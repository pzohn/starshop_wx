<form bindsubmit="formSubmit" bindreset="formReset">
<view class="content">
<image src="{{avatarUrl}}" style="width:88px;height:88px;border-radius:66%;margin-left:37%;margin-top:5%"></image>
  <view class="hr"></view>

  <view class="item">
     <text class="item_text">学校：</text> 
     <input type="text" name="school" value= '{{school}}'/>
  </view>
  <view class="item">
     <text class="item_text">校区：</text> 
     <input type="text" placeholder="本部/翠林路" name="area" value= '{{area}}'/>
  </view>
  <view class="item">
     <text class="item_text">年级：</text> 
     <input type="text" placeholder="一年级/.../六年级" name="grade" value= '{{grade}}'/>
  </view>
  <view class="item">
     <text class="item_text">班级：</text> 
     <input type="text" placeholder="1/.../20班" name="class" value= '{{class}}'/>
  </view>
  <!-- <view class="item">
     <text class="item_text_ex">邮箱：</text>
     <input type="text" name="email" placeholder="****@***.com" value= '{{email}}'/>
  </view> -->
  <view class="item">
     <text class="item_text">姓名：</text> 
     <input type="text" name="name" value= '{{name}}'/>
  </view>
  <view class="item">
     <text class="item_text">性别：</text> 
     <input maxlength="1" name="sex" placeholder="男/女" value= '{{sex}}'></input>
  </view>
  <view class="item">
     <text class="item_text">民族：</text> 
     <input name="nation" value= '{{nation}}'></input>
  </view>
  <view class="item">
     <text class="item_text">身份证号：</text> 
     <input maxlength="18" name="card" value= '{{card}}'></input>
  </view>
  <view class="item">
     <text class="item_text">联系电话：</text> 
     <input maxlength="11" name="phone" value= '{{phone}}'></input>
  </view>
  <!-- <view class="item">
     <text class="item_text_ex">年龄：</text> 
     <input type="number" name="age" value= '{{age}}'/>
  </view> -->

  <view class="button">
      <button class="btn" type="primary" form-type="submit">确定</button>
  </view>
</view>

</form>